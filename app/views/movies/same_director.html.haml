-#  This file is app/views/movies/index.html.haml
%h1 Similar Movies Page for "#{@target_movie.title}"

%table#movies
  %thead
    %tr
      %th Title
      %th Rating
      %th Release Date
      %th Director
      %th Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= movie.director
        %td= link_to "More about #{movie.title}", movie_path(movie)

